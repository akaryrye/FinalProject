    "concurrently": "^4.1.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-session": "^1.17.0",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-reveal": "^1.2.2",
    "reactstrap": "^8.1.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  }
